<?xml version="1.0"?>

<PropertyList>
 
  <fx>

    <runner>
      <name>Runnersound</name>
      <mode>looped</mode>
      <path>Sounds/runnerfast.wav</path>
        <property>/velocities/groundspeed-kt</property>
      <volume>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.05</factor>
      </volume>
      <pitch>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.05</factor>
        <min>0.2</min>
        <max>2.0</max>
      </pitch>
    </runner>

    <flap>
      <name>Flapsound</name>
      <mode>once</mode>
      <path>flap.wav</path>
      <property>/sim/sound/flap</property>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.1</offset>
      </volume>
    </flap>
    
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.002</factor>
        <min>0.0</min>
        <max>0.2</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.5</offset>
      </pitch>
    </wind>
    
  </fx>

</PropertyList>
